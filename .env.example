# Momentum Lens Environment Variables

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws

# Default Data Source Configuration
REACT_APP_DEFAULT_DATA_SOURCE=akshare
REACT_APP_ENABLE_FALLBACK=true
REACT_APP_CACHE_DURATION=60000

# Optional API Keys (for paid/freemium sources)
# Leave empty if using free sources only
REACT_APP_TUSHARE_TOKEN=
REACT_APP_EASTMONEY_APPKEY=

# Backend Configuration
DATABASE_URL=sqlite:///./momentum_lens.db
SECRET_KEY=your-secret-key-here
ENVIRONMENT=development

# Market Data Sources (Backend)
AKSHARE_ENABLED=true
SINA_ENABLED=true
EASTMONEY_ENABLED=true
TUSHARE_ENABLED=false
TUSHARE_TOKEN=
YAHOO_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/momentum_lens.log

# Cache Settings
CACHE_ENABLED=true
CACHE_TTL=60
REDIS_URL=redis://localhost:6379/0

# Performance Monitoring (Optional)
ENABLE_METRICS=false
METRICS_PORT=9090